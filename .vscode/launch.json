    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Streamlit Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "app.py"  // Replace with the name of your Streamlit script
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "launch:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}